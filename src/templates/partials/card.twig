<article class="card{% if image %} card--has-image{% endif %}">
  {% if image %}
    <div class="card__media">
      <a href={{href}}>
        {% include 'partials/img.twig' with { name: 'card' } %}
      </a>
    </div>
  <div class="card__body">
  {% endif %}

    <h3 class="card__title">
      <a href="{{href}}" class="card__link">{{title}}</a>
    </h3>

    {% if author and not tags %}
      <p class="card__author">by <a href="#" class="link-border">{{author}}</a></p>
    {% endif %}

    {% if text %}
      <p class="card__text">{{text}}</p>
    {% endif %}

    {% if date and time %}
      <p class="card__meta">{{date}} &middot; {{time}}</p>
    {% endif %}

    {% if local %}
      <p class="card__meta">{{local}}</p>
    {% endif %}

    {% if tags %}
      <ul class="tags mt-1">
        {% for i in 0..2 %}
          <li class="tags__item">
            <a href="#" class="tags__link">Lorem Ipsum</a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}

  {% if image %}
    </div>
  {% endif %}
</article>
