<footer class="site-footer">
  {% if not pardot %}
  <div class="container">
    <div class="row">
      <div class="col-lg-3 border-lg-r border-secondary-dark">

        <div class="site-footer__content">

          <div class="footer-callout">
            <h3 class="footer-callout__title">Support the Institute</h3>
            <p class="footer-callout__text">Help us help the world</p>
            <div class="footer-callout__footer">
              <a href="#" class="button button--secondary">Make a Gift</a>
            </div>
          </div>

          <ul class="social-links social-links--light site-footer__social">
            {% for item in social_links %}
              <li class="social-links__item">
                <a href="{{item.href}}" class="social-links__link">
                  {% include 'partials/icon.twig' with {
                    'name': item.slug
                  } %}
                  <span class="sr-only">{{item.text}}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>

      </div>
      <div class="col-lg-9">
        <div class="row">
          {% for menu in footer_nav %}
            <div class="col-sm-6">
              {% include 'partials/footer-menu.twig' with menu %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}

  <div class="secondary-footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">

          <div class="secondary-footer__brand">
            <img src="{{imagesDir ? imagesDir : 'images'}}/middlebury-logo-white.svg" alt="Middlebury" width="195" height="71">
          </div>

        </div>
        <div class="col-lg-9">

          <ul class="secondary-footer__list">
            {% for item in secondary_footer_nav %}
              <li class="secondary-footer__item">
                <a href="{{item.href}}" class="secondary-footer__link">{{item.text}}</a>
              </li>
            {% endfor %}
          </ul>

        </div>
      </div>
    </div>

    <div class="secondary-footer__button">
      <a href="#midd-pagetop" class="button button--primary" aria-label="Back to top">
        <svg class="icon">
          <use xlink:href="#icon-arrow-up" />
        </svg>
      </a>
    </div>
  </div>

</footer>
