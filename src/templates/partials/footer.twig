<footer class="site-footer">
  <div class="container">
    <div class="row row--dividers row--dividers-light">
      <div class="col-lg-3">

        <div class="site-footer__content">
          {% embed 'partials/callout.twig' with {
            light: true,
            preheader: 'Help us help the world',
            title: 'Support the Institute',
            social_links: social_links,
            icons: icons
          } %}
            {% block body %}
              <a href="" class="button button--secondary">Make a Gift</a>
            {% endblock %}
            {% block footer %}
              <ul class="social-links social-links--light">
                {% for item in social_links %}
                  <li class="social-links__item">
                    <a href="{{item.href}}" class="social-links__link">
                      <svg class="icon">
                        <use xlink:href="#icon-{{item.slug}}" />
                      </svg>
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endblock %}
          {% endembed %}
        </div>

      </div>
      <div class="col-lg-9">
        <div class="row">
          {% for menu in footer_nav %}
            <div class="col-sm-3">
              {% include 'partials/footer-menu.twig' with menu %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <div class="secondary-footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-3">

          <div class="secondary-footer__brand">
            <!-- TODO: use picture? -->
            <img src="images/midd-logo.png" alt="Middlebury">
          </div>

        </div>
        <div class="col-lg-9">

          <ul class="secondary-footer__list">
            {% for item in secondary_footer_nav %}
              <li class="secondary-footer__item">
                <a href="{{item.href}}" class="secondary-footer__link">{{item.text}}</a>
              </li>
            {% endfor %}
          </ul>

        </div>
      </div>
    </div>

    <div class="secondary-footer__button">
      <a href="#midd-pagetop" class="button button--primary" aria-label="Back to top">
        <svg class="icon">
          <use xlink:href="#icon-arrow-up" />
        </svg>
      </a>
    </div>
  </div>

</footer>
