<header class="page-header" aria-labelledby="midd-page-header-label">
  <div class="container">
    <div class="row">
      <div class="offset-md-1 col-md-11">

        <div class="row">

          <div class="page-header__primary">
            {% include 'partials/breadcrumb.twig' with { items: breadcrumb } %}

            <h1
              class="page-header__title"
              id="midd-page-header-label"
              {% if pardot %}
                pardot-region="simple-text" pardot-region-type="simple"
              {% endif %}
            >
              {{title}}
            </h1>
          </div>

          {% if callout_title or callout_link_text %}
            <div class="page-header__secondary">
              {% include 'partials/page-callout.twig' with {
                title: callout_title,
                link_url: callout_link_url,
                link_text: callout_link_text
              } %}
            </div>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
</header>
