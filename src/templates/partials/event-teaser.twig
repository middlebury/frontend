<article class="event-teaser" aria-labelledby="midd-event-label-{{i}}">
  <div class="event-teaser__media">
    <a href="{{url}}">
      <figure class="media media-image view-mode-teaser">
        <picture>
          <source srcset="http://placehold.it/160x120" media="(min-width: 580px)">
          <source srcset="http://placehold.it/100x75">
          <img src="http://placehold.it/160x120" srcset="" alt="">
        </picture>
      </figure>
    </a>
  </div>
  <div class="event-teaser__body">
    <p class="event-teaser__datetime"><strong><time datetime="">September 25, 2016</time></strong> &middot; <strong><time datetime="">5:00 PM</time></strong></p>
    <p class="event-teaser__local"><span>{{local}}</span></p>
    <h3 class="event-teaser__title" id="midd-event-label-{{i}}"><a href="{{url}}">{{title}}</a></h3>
    <p class="event-teaser__blurb">{{blurb}}</p>
    <ul class="event-teaser__metalist">
      {% for item in metalist %}
        <li class="event-teaser__metaitem"><em>{{item.text}}</em></li>
      {% endfor %}
    </ul>
  </div>
</article>
