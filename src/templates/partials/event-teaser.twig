<article class="event-teaser" aria-labelledby="midd-event-label-{{i}}">
  <div class="event-teaser__media">
    <a href="{{url}}">
      <figure class="media media-image view-mode-teaser">
        {% include 'partials/img.twig' with { name: 'teaser' } %}
      </figure>
    </a>
  </div>
  <div class="event-teaser__body">
    <p class="event-teaser__datetime"><strong><time datetime="">September 25, 2016</time></strong> &middot; <strong><time datetime="">5:00 PM</time></strong></p>
    <p class="event-teaser__blurb">{{blurb}}</p>
    <p class="event-teaser__local"><span>McCone Irvine Auditorium</span></p>
    <h3 class="event-teaser__title" id="midd-event-label-{{i}}"><a href="{{url}}">Lorem ipsum dolor set</a></h3>
    <ul class="event-teaser__metalist">
      <li class="event-teaser__metaitem"><em>Open to the Public</em></li>
    </ul>
  </div>
</article>
