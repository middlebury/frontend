{% set sizes = image_sizes[name] %}
{% set placehold = 'http://placehold.it/' %}

{% set picture_sources = [] %}

{% for name, size in sizes %}
  {% set bp = breakpoints[name] %}
  {% set picture_sources = [{size: size, bp: bp}]|merge(picture_sources) %}
{% endfor %}

{% set sources = picture_sources|sortby('bp')|reverse %}

<picture>
  {% for item in sources %}
    <source srcset="{{placehold}}{{item.size}}" media="(min-width: {{item.bp}}px)" />
  {% endfor %}
  <img src="{{placehold}}{{picture_sources[0].size}}" alt="" />
</picture>
