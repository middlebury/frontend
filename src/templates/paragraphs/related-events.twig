{% embed 'partials/section.twig' with {
  title: 'Mixtape Exchange Audio Editing and Mixing Workshop',
  moreLinkText: 'Mixtape Exchange Audio Editing and Mixing Workshop',
  moreLinkHref: '#',
  labelledby: 'midd-related-events'
} %}
  {% block content %}
    <div class="row">
      {% for i in 1..3 %}

        {# twig js has to be `divisibleby` instead of `divisible by` #}
        <div class="col-md-6 col-lg-4{% if not loop.last %}{% if loop.index is divisibleby(2) %} border-lg-r{% else %} border-md-r{% endif %} mb-4 mb-lg-0{% endif %}">

          {% if not loop.last %}
            <div class="border-b border-md-b-0 pb-4 pb-md-0">
          {% endif %}

            {% include 'partials/event-teaser.twig' %}

          {% if not loop.last %}
            </div>
          {% endif %}

        </div>
      {% endfor %}
    </div>
  {% endblock %}
{% endembed %}
