{% embed 'partials/section.twig' with {
  title: 'Faculty Spotlight'
} %}
  {% block content %}
    <div class="row">
      {% for item in faculty_spotlight %}
        {# TODO: make a dividers component for these #}
        <div class="col-md-3{% if not loop.last %} border-md-r mb-4 mb-md-0{% endif %}">
          {% if not loop.last %}
            <div class="border-b border-md-b-0 pb-4 pb-md-0 h-100">
          {% endif %}

          {% include 'partials/profile-spotlight-item.twig' with { id: loop.index, item: item } %}

          {% if not loop.last %}
            </div>
          {% endif %}
        </div>

      {% endfor %}
    </div>
  {% endblock %}
{% endembed %}
